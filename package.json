{
  "name": "webos-http-server",
  "version": "1.0.0",
  "description": "HTTP Server with Fastify, TypeScript, Zod and Swagger",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "type-check": "tsc --noEmit",
    "docker:build": "docker build -t webos-http-server .",
    "docker:build:multi": "docker buildx build --platform linux/amd64,linux/arm64 -t ghcr.io/pedrosodev/webos-http-server:master --push .",
    "docker:run": "docker run -d -p 3000:3000 --name webos-server --network host webos-http-server",
    "docker:stop": "docker stop webos-server && docker rm webos-server",
    "docker:logs": "docker logs -f webos-server",
    "compose:up": "docker-compose up -d",
    "compose:down": "docker-compose down",
    "compose:logs": "docker-compose logs -f"
  },
  "keywords": [
    "fastify",
    "typescript",
    "zod",
    "swagger"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/swagger": "^9.7.0",
    "@fastify/swagger-ui": "^5.2.5",
    "dotenv": "^17.3.1",
    "fastify": "^5.7.4",
    "fastify-type-provider-zod": "^6.1.0",
    "lgtv2": "^1.6.3",
    "zod": "^4.3.6",
    "zod-to-json-schema": "^3.25.1"
  },
  "devDependencies": {
    "@types/node": "^22.14.2",
    "nodemon": "^3.1.9",
    "pino-pretty": "^13.1.3",
    "tsx": "^4.20.2",
    "typescript": "^5.8.2"
  }
}
